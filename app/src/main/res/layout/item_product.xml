<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="product_img"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/default_product" />

        <TextView
            android:id="@+id/productTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productImageView"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="product title"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/productQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/productTitle"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:text="200g"
            android:textColor="#b5b3b3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/productQuantity"
            android:padding="5dp"
            android:text="$20"
            android:textColor="@color/colorRedmatDark"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productQuantity"
            android:layout_toRightOf="@id/productPrice"
            android:background="@drawable/strike_through"
            android:paddingBottom="7dp"
            android:paddingLeft="1dp"
            android:paddingTop="7dp"
            android:text="$141"
            android:textSize="12sp" />

        <View
            android:id="@+id/dividerView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/productPrice"
            android:background="#b5b3b3"></View>

        <TextView
            android:id="@+id/addToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dividerView"
            android:textColor="@color/colorRedmatDark"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="ADD TO CART"
            android:textSize="13sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>